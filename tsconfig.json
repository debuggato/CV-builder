{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": true,
    "downlevelIteration": false,
    "rootDir": "./",
    "outDir": "dist/",
    "baseUrl": "src/",
    "watch": true,
    "noUnusedLocals": true,
    "types": ["react", "node", "jest"],
    "paths": {
      "@components/*": ["client/components/*"],
      "@styles/*": ["client/styles/*"],
      "@app/*": ["client/app/*"],
      "@genericState/*": ["client/genericState/*"],
      "@client/*": ["client/*"],
      "@sidebar/*": ["client/app/sidebar/*"],
      "@server/*": ["server/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"]
    },
    "pretty": true
  },
  "esclude": ["node_modules", "src/**/.test.tsx"]
}
